package kerosene;

/**
 * @author watar
 *
 */
import java.util.Scanner;
public class Main {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO 自動生成されたメソッド・スタブ
		Scanner scanner = new Scanner(System.in);
		System.out.println("＜灯油注文システム＞");
		System.out.println(" ");
		System.out.println("灯油を注文したい量を入力してください。1Lあたり100円です。");
		System.out.print("(最大50Lまで注文できます。)：");
		System.out.println(" ");
		int litre = scanner.nextInt();
		if (litre > 0 && litre <=50) {
			int amountFinal = Util.charge(litre);
			System.out.println(amountFinal+"円になります。料金の支払いをお願いします。");
		} else {
			System.out.println("正しい数値が入力されませんでした。");
			System.out.println("お手数ですが初めからやり直してください。");
		}
		
	}

}
